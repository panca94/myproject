<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Project List</h1>
    <a href="/projects/add" class="btn btn-success">+ Add Project</a>
</div>



<!-- SEARCH FORM -->
<form class="mb-3" method="GET" action="/projects">
      <div class="input-group" style="max-width:480px;">
        <input type="text" name="search" class="form-control" placeholder="Cari proyek, pelanggan, atau account manager..." value="<%= typeof search !== 'undefined' ? search : '' %>">
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<!-- TABEL TANPA FORM PENCARIAN -->
<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>No</th>
            <th>Date</th>
            <th>Project Name</th>
            <th>Customer</th>
            <th>User Account</th>
            <th>Project Value</th>
            <th>Status</th>
            <th>Update</th>
            <th>Challenge</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% if (projects.length > 0) { %>
            <% projects.forEach((project, index) => { %>
                <tr>
                    <td><%= ((currentPage - 1) * 10) + index + 1 %></td>
                    <td><%= new Date(project.projectDate).toLocaleDateString('id-ID') %></td>
                    <td><%= project.projectName %></td>
                    <td><%= project.customer ? project.customer.name : 'N/A' %></td>
                    <td><%= project.accountManager ? project.accountManager.username : 'N/A' %></td>
                    <td>Rp <%= project.amount.toLocaleString('id-ID') %></td>
                    <td><%= project.status || '-' %></td>
                    <td><%= project.update_status || '-' %></td>
                    <td><%= project.challenge || '-' %></td>
                    <td>
                        <% if (user.role === 'admin' || user.role === 'manager' || (user.role === 'sales' && project.userId === user.id)) { %>
                            <a href="/projects/edit/<%= project.id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/projects/delete/<%= project.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Apakah Anda yakin ingin menghapus proyek ini?')">Hapus</button>
                            </form>
                        <% } else { %>
                            <span class="text-muted">-</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="11" class="text-center">No projects found.</td>
            </tr>
        <% } %>
    </tbody>
    <!-- TABEL FOOTER UNTUK TOTAL NILAI -->
    <tfoot class="table-light fw-bold">
        <tr>
            <td colspan="5" class="text-end">TOTAL PROJECT VALUE</td>
            <td>Rp <%= totalValue.toLocaleString('id-ID') %></td>
            <td colspan="5"></td>
        </tr>
    </tfoot>
</table>

<!-- NAVIGASI PAGINATION TANPA PARAMETER SEARCH -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>">Previous</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>"><%= i %></a>
            </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>">Next</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        <% } %>
    </ul>
</nav>

<!-- TOP 5 SALES -->
<% if (user && (user.role === 'admin' || user.role === 'manager')) { %>
<div class="mb-3">
    <h5>Top 5 Sales (by Won project value)</h5>
    <ul class="list-group list-group-horizontal">
        <% if (typeof topSales !== 'undefined' && topSales.length > 0) { %>
            <% topSales.forEach(s => { %>
                <li class="list-group-item">
                    <strong><%= s.username %></strong>
                    <div class="small text-muted">Rp <%= Number(s.totalValue || 0).toLocaleString('id-ID') %></div>
                    <div class="small text-muted">Won: <%= s.wonCount || 0 %> project(s)</div>
                </li>
            <% }) %>
        <% } else { %>
            <li class="list-group-item">No data</li>
        <% } %>
    </ul>
</div>
<% } %>

<%- include('../partials/footer') %>